---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';

const currentYear = new Date().getFullYear();
---

<footer class="relative border-t border-gray-200 dark:border-slate-800 not-prose">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300">
    <div class="flex flex-col items-center gap-8 py-12 md:py-16">
      <!-- Logo -->
      <div class="flex justify-center">
        <Logo />
      </div>

      <!-- Separador decorativo -->
      <div class="flex items-center gap-2">
        <div class="h-0.5 w-12 bg-primary"></div>
        <Icon name="tabler:heart" class="w-6 h-6 text-primary" />
        <div class="h-0.5 w-12 bg-primary"></div>
      </div>

      <!-- Fecha -->
      <div class="text-center">
        <h3 class="text-2xl font-script text-primary mb-2">22 de marzo de 2025</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">¡Te esperamos!</p>
      </div>

      <!-- Separador -->
      <div class="w-full h-px bg-gray-200 dark:bg-slate-800"></div>

      <!-- Copyright y créditos -->
      <div class="text-center text-sm text-gray-600 dark:text-gray-400 space-y-2">
        <p>
          <b>© {currentYear} Sergio & Katherine. Todos los derechos reservados.</b>
        </p>
        <p class="flex items-center justify-center gap-1">
          Desarrollado con <Icon name="tabler:heart" class="w-4 h-4 text-primary" /> por
          <a
            href="https://github.com/XergioAleX"
            target="_blank"
            rel="noopener"
            class="hover:text-primary transition duration-150 ease-in-out text-primary"
          >
            XergioAleX
          </a>
        </p>
        <p class="text-xs flex items-center justify-center gap-1">
          Basado en <a
            href="https://astro.build/themes/details/astrowind/"
            target="_blank"
            rel="noopener"
            class="hover:text-primary transition duration-150 ease-in-out text-primary font-medium"
          >
            AstroWind
          </a> template
        </p>
      </div>
    </div>
  </div>
</footer>
